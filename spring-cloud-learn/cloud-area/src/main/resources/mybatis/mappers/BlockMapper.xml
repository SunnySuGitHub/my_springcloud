<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.area.Dao.BlockMapper">
    <!--mapper接口所在包-->

    <select id="findByBlockNameAndCid" resultType="com.cloud.area.Entity.Block">
        select
        b_id,
        b_name,
        c_id
        from
        t_block
        where
        b_name = #{blockName}
        and c_id = #{cId}
    </select>

    <insert id="saveBlock" parameterType="com.cloud.area.Entity.Block" useGeneratedKeys="true" keyProperty="bId">
        insert into
        t_block(
        b_name,
        c_id
        ) values (
        #{bName},
        #{cId}
        )
    </insert>

    <select id="findAllByCid" resultType="com.cloud.area.Entity.Block">
        select
        *
        from
        t_block
        where
        c_id = #{cid}
        and is_delete = 0
    </select>

    <select id="getBlock" resultType="com.cloud.area.Entity.Block">
        select
        *
        from
        t_block
        where
        b_id = #{bid}
        and is_delete = 0
    </select>

    <update id="delBlock" parameterType="java.lang.Integer">
        update
        t_block
        set
        is_delete = 1
        where
        b_id = #{bid}
    </update>

    <update id="uptBlock" parameterType="com.cloud.area.Entity.Block">
        update
        t_block
        <set>
            <if test="bName !=null">,b_name = #{bName}</if>
            <if test="cId !=null">,c_id = #{cId}</if>
        </set>
        where
        b_id = #{bId}
    </update>

</mapper>