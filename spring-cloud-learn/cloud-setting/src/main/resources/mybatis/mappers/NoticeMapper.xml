<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.setting.Dao.NoticeMapper">
    <!--mapper接口所在包-->
    <insert id="addNotice" parameterType="com.cloud.setting.Entity.Notice">
        insert into
        t_notice(
        title,
        content,
        publish_time,
        enprNo
        ) values (
        #{title},
        #{content},
        #{publishTime},
        #{enprNo}
        )
    </insert>

    <select id="noticeList" resultType="com.cloud.setting.Entity.Notice">
        select
        *
        from
        t_notice
        where
        enprNo = #{enprNo}
        and is_delete = 0
    </select>

    <update id="uptNotice" parameterType="com.cloud.setting.Entity.Notice">
        update
        t_notice
        <set>
            <if test="title !=null">,title = #{title}</if>
            <if test="content !=null">,content = #{content}</if>
            <if test="publishTime !=null">,publish_time = #{publishTime}</if>
            <if test="enprNo !=null">,enprNo = #{enprNo}</if>
        </set>
        where
        id = #{id}
    </update>

    <update id="delNotice" parameterType="java.lang.Integer">
        update
        t_notice
        set
        is_delete = 1
        where
        id = #{id}
    </update>


</mapper>